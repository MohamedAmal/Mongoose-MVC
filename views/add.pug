
html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" ,crossorigin="anonymous")
    body
        h1.p-3 #{title}
        //- p=products
        div.container.p-4
            div.row
                form(method='POST' action=`/products/add`)
                    div.mb-3
                       label(for="exampleInputEmail1" class="form-label") Name
                       input(type="text" class="form-control" id="name" name="name" )

                    div.mb-3
                       label(for="exampleInputEmail1" class="form-label") Price
                       input(type="number" class="form-control" id="price" name="price" )

                    div.mb-3
                       label(for="exampleInputPassword1" class="form-label") Store
                       input(type="text" class="form-control" id="store" name="store" )
                    
                    div.mb-3
                       label(class="form-check-label" for="exampleCheck1") Description                     
                       textarea(class="form-control" id="exampleFormControlTextarea1" rows="3" name="description" ) 

                    button(type="submit" class="btn btn-primary ") Add New Product
                    